{
  "rootDir": "../../",
  "preset": "ts-jest",
  "restoreMocks": true,
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  "moduleNameMapper": {
    "^components/(.*)$": "<rootDir>/src/components/$1",
    "^pods/(.*)$": "<rootDir>/src/pods/$1",
    "^scenes/(.*)$": "<rootDir>/src/scenes/$1",
    "\\.(jpg|jpeg|png|svg)$": "<rootDir>/config/test/fileMock.js",
    "^.+\\.(s?css|less)$": "<rootDir>/config/test/fileMock.js"
  },
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "setupFiles": [
    "<rootDir>/config/test/polyfills.js",
    "<rootDir>/config/test/setupTest.js"
  ],
  "modulePaths": [
    "<rootDir>"
  ]
}